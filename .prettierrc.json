{
	"bracketSameLine": false,
	"bracketSpacing": true,
	"jsxSingleQuote": true,
	"semi": false,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "es5",
	"useTabs": true,
	"printWidth": 80,
	"importOrder": [
		"next",
		"react",
		"^@[A-Za-z](.*)$",
		"^[A-Za-z](.*)$",
		"^@/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": false,
	"importOrderSortSpecifiers": true,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	]
}
